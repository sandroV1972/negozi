# Proteggi file sensibili
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files ".env.*">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Proteggi file di configurazione
<Files "config/*">
    Order allow,deny
    Deny from all
</Files>

# Abilita PHP
AddType application/x-httpd-php .php

# Index di default
DirectoryIndex index.php index.html

# Sicurezza aggiuntiva (se supportata)
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Riwrite URL friendly
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>